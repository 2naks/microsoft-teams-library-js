{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dts",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "./test",
    "./webpack.config.ts"
  ]
}